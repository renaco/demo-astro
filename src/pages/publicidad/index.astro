---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <main>
      <div class="pt-0 pb-1 mb-1 w-auto publicidad" style="outline: 0px;">
        <div
          class="p-0 mx-auto mt-0 mb-6 w-full lg:w-[800px] font-sans bg-no-repeat text-center publicidad-content"
          style='outline: 0px; background-image: url("https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/fondo1.jpg"); background-size: 100% 100%;'
        >
          <h2
            class="px-0 pt-2 pb-0 m-0 mb-4 text-4xl font-bold"
            style="outline: 0px; line-height: 44px;"
          >
            El Universal.mx
          </h2>
          <p class="py-0 px-12 mb-5 leading-6 publicidad-summary">
            Te invitamos a utilizar nuestras plataformas interactivas para
            ciertos tamaños, formatos y precios de publicidad impresa y digital
          </p>
          <div class="publicidad-grid">
            <div class="pb-2 mb-0" style="outline: 0px;">
              <a
                class="w-64 tracking-tight leading-5 text-sky-800 hover:cursor-pointer"
                href="https://www.eluniversal.com.mx/sites/default/files/tarifarios2022/Tarifario_EU_2022.pdf"
                style="grid-area: 1 / izquierda / auto / izquierda; text-decoration: none;"
                target="_blank"
              >
                <img
                  class="p-0 m-0 w-full cursor-pointer"
                  src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/tarifario1.png"
                  alt="Tarifario El Universal"
                  style="outline: 0px; filter: saturate(1.15);"
                />
              </a>
            </div>
            <div class="p-0 m-0" style="outline: 0px;">
              <a
                target="_blank"
                title="Media Kit El Universal"
                href="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Media_Kit_El_Universal_2022_Sitio.pdf"
                class="p-0 m-0 cursor-pointer text-sky-800 hover:cursor-pointer"
                style="outline: 0px; text-decoration: none;"
              >
                <img
                  class="p-0 m-0 w-full"
                  src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/mediakit1.png"
                  alt="Media Kit El Universal"
                  style="outline: 0px; filter: saturate(1.15);"
                />
              </a>
              <a
                href="https://publicidad.eluniversal.com.mx/Publicidad/Formatos_2022/Home/Home_EU_2022.html"
                title="Formatos Digitales El Univerlsa"
                target="_blank"
                class="pt-0 pb-2 mt-0 block mb-5 cursor-pointer text-sky-800 hover:cursor-pointer"
                style="outline: 0px; text-decoration: none;"
              >
                <img
                  class="flex p-0 my-0 mx-auto w-11/12 cursor-pointer"
                  src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/formatos1.png"
                  alt="Formato El Universal"
                  style="outline: 0px; filter: saturate(1.15);"
                /></a
              >
            </div>
            <div class="p-0 m-0" style="outline: 0px;">
              <a
                href="https://publicidad.eluniversal.com.mx/Publicidad/Cotizador/2022/Cotizador.html"
                target="_blank"
                title="Cotizador El Universal"
                class="p-0 m-0 cursor-pointer text-sky-800 hover:cursor-pointer"
                style="outline: 0px; text-decoration: none;"
              >
                <img
                  class="p-0 m-0 w-full"
                  src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/cotizador1.png"
                  alt="Cotizador El Universal"
                  style="outline: 0px; filter: saturate(1.15);"
                />
              </a>
            </div>
          </div>
          <div class="pb-5">
            <p
              class="py-0 px-12 m-0 font-bold leading-6 text-center text-slate-800 publicidad-phone"
              style="outline: 0px;"
            >
              <b
                class="p-0 m-0 font-bold leading-6 text-center"
                style="outline: 0px; color: #86cee2;">VENTAS:</b
              >
              55 5709 1313
            </p>
            <p
              class="py-0 px-12 m-0 text-[14px] font-normal leading-6 text-center"
              style="outline: 0px; color: #222b59;"
            >
              Juan Manuel Ramírez: Ext. 1520 | <a
                href="mailto:juan.ramirezr@eluniversalclabsa.mx"
                class="p-0 m-0 leading-6 text-center text-sky-800 hover:cursor-pointer"
                style="outline: 0px; text-decoration: none;"
                >juan.ramirezr@eluniversalclabsa.mx</a
              >
            </p>
          </div>
        </div>

        <div
          class="p-0 my-0 mx-auto w-full w-[800px] font-sans bg-no-repeat publicidad-content"
          style='outline: 0px; background-image: url("https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/fondo2.jpg"); background-size: 100% 100%;'
        >
          <h2
            class="px-0 pt-2 pb-0 m-0 text-[38px] font-bold text-center text-slate-800"
            style="outline: 0px; line-height: 44px;"
          >
            Nuestras Verticales
          </h2>
          <p
            class="pt-0 pb-2 px-12 mb-6 text-lg leading-6 text-center text-slate-800"
          >
            Conoce nuestros tamaños, formatos y precios de publicidad impresa y
            digital
          </p>

          <div class="grid publicidad-items gap-2 p-0 m-0 text-sky-800">
            <a
              href="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Tarifario_Vive_USA_2022.pdf"
              target="_blank"
              title="Tarifario Viveusa"
              class="p-0 m-0 cursor-pointer text-sky-800 hover:cursor-pointer"
              style="outline: 0px; text-decoration: none;"
            >
              <img
                class="flex p-0 my-0 mx-auto w-11/12 h-full cursor-pointer text-sky-800"
                src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Portada_Vive_USA.png"
                alt="Tarifario Viveusa"
                style="outline: 0px; filter: saturate(1.15);"
              />
            </a>
            <a
              href="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Tarifario_Clase_2022.pdf"
              target="_blank"
              title="Tarifario Clase"
              class="p-0 m-0 cursor-pointer text-sky-800 hover:cursor-pointer"
              style="outline: 0px; text-decoration: none;"
            >
              <img
                class="flex p-0 my-0 mx-auto w-11/12 h-full cursor-pointer text-sky-800"
                src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Portada_Clase.png"
                alt="Tarifario Clase"
                style="outline: 0px; filter: saturate(1.15);"
              />
            </a>
            <a
              href="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Tarifario_De_10_2022.pdf"
              target="_blank"
              title="Tarifario De10"
              class="p-0 m-0 cursor-pointer text-sky-800 hover:cursor-pointer"
              style="outline: 0px; text-decoration: none;"
            >
              <img
                class="flex p-0 my-0 mx-auto w-11/12 h-full cursor-pointer text-sky-800"
                src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Portada_De_10.png"
                alt="Tarifario De10"
                style="outline: 0px; filter: saturate(1.15);"
              />
            </a>
            <a
              href="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Tarifario_El_Grafico_2022.pdf"
              target="_blank"
              title="Tarifario GU"
              class="p-0 m-0 cursor-pointer text-sky-800 hover:cursor-pointer"
              style="outline: 0px; text-decoration: none;"
            >
              <img
                class="flex p-0 my-0 mx-auto w-11/12 h-full cursor-pointer text-sky-800"
                src="https://www.eluniversal.com.mx/sites/all/themes/eluniversal/images/publicidad/Portada_EG.png"
                alt="Tarifario Gu"
                style="outline: 0px; filter: saturate(1.15);"
              />
            </a>
          </div>
          <div class="grid gap-2 pb-3 m-0 py-3 publicidad-info">
            <div class="px-2 relative publicidad-grid__info">
              <p
                class="py-0 px-2 m-0 text-xs font-bold leading-4 text-center text-slate-800"
                style="outline: 0px;"
              >
                VENTAS EN TEXAS, USA (210) 549 1778 | (210) 459 1847 INC SS NE
                LOOP 410 SAN ANTONIO TX 78216
              </p>
              <p
                class="py-0 px-2 m-0 text-xs font-normal leading-4 text-center text-slate-800"
                style="outline: 0px;"
              >
                VENTAS MÉXICO CDMX 55 5709 1313
                <span class="mt-1 block w-[240px]">
                  <a
                    href="mailto:saleseluniversal@eluniversalsanantonio.com"
                    class="p-0 m-0 text-xs leading-[18px] text-center text-blue hover:cursor-pointer"
                    style="outline: 0px; text-decoration: none;"
                    >saleseluniversal@eluniversalsanantonio.com</a
                  >
                </span>
              </p>
            </div>
            <div class="">
              <p
                class="py-0 px-4 m-0 font-bold leading-6 text-center text-slate-800 publicidad-phone is-apendice"
              >
                VENTAS: 55 5709 1313 |
              </p>
              <p
                class="py-0 px-4 m-0 font-normal leading-6 text-center text-slate-800 publicidad-contactText"
              >
                Juan Manuel Ramírez: Ext. 1520 <br />
                <a
                  href="mailto:juan.ramirezr@eluniversalclabsa.mx"
                  class="p-0 m-0 leading-6 text-center text-sky-800 hover:cursor-pointer"
                  style="outline: 0px; text-decoration: none;"
                  >juan.ramirezr@eluniversalclabsa.mx</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
    <style>
      .content-adv main {
        display: block;
        margin: auto;
      }

      .publicidad {
        color: #222b59;
      }

      .publicidad-summary {
        font-size: 16px;
      }

      .publicidad-content {
        width: 100%;
      }

      .publicidad-grid {
        display: grid;
        grid-template-columns: 1fr;
      }

      .publicidad-grid__item {
        padding: 36px 0 24px;
        background-color: #005383;
        border-radius: 8px;
      }

      .text-blue {
        color: #005383;
      }

      .publicidad-phone {
        font-size: 18px;
      }

      .is-apendice {
        font-size: 14px;
      }

      .publicidad-items {
        display: grid;
        grid-template-columns: 1fr 1fr;
      }

      .publicidad-info {
        display: grid;
        outline: 0;
        grid-template-columns: 1fr;
      }

      .publicidad-grid__info {
        grid-template-rows: repeat(4, 1fr);
      }

      .publicidad-contactText {
        font-size: 14px;
      }

      @media screen and (min-width: 480px) {

        .publicidad-content {
          max-width: 800px;
        }

        .publicidad-grid {
          grid-template-columns: 1fr 1fr 1fr;
          max-width: 66rem;
        }

        .publicidad-summary {
          font-size: 18px;
        }

        .publicidad-phone {
          font-size: 20px;
        }

        .publicidad-items {
          grid-template-columns: repeat(4, 1fr);
        }

        .publicidad-info {
          grid-template-columns: 190px 3fr;
        }

        .publicidad-contactText {
          font-size: 16px;
        }
      }
    </style>
    <Footer />
  </body>
</html>
