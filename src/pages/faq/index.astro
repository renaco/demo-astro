    <script is:inline>
      const listItems = Array.from(document.querySelectorAll(".faq-button"));
      const listContents = Array.from(
        document.querySelectorAll(".tab-content")
      );

      let itemChoosed;

      function hideAllItems() {
        listContents.forEach((item, key) => {
          item.classList.add("hidden");
        });
      }

      function showTab(item) {
        hideAllItems();

        document.getElementById(`Acc${item}`).classList.remove("hidden");
      }

      hideAllItems();
      listItems.forEach((item, key) => {
        item.addEventListener("click", () => {
          item.classList.toggle("is-active");

          itemChoosed = key + 1;
          showTab(itemChoosed);
          listItems.forEach((ele, k) => {
            if (key !== k) {
              ele.classList.remove("is-active");
            }
          });
        });
      });

      document.getElementById(`Acc1`).classList.remove("hidden");
